{
  "name": "dacument",
  "version": "2.0.0",
  "description": "Schema-driven CRDT document with signed ops, role-based ACLs, and per-actor auditability.",
  "keywords": [
    "crdt",
    "document",
    "collaboration",
    "replication",
    "sync",
    "acl",
    "signature",
    "crypto",
    "eventual-consistency",
    "offline"
  ],
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "test": "npm run build && node --test test/*.test.js",
    "test:types": "tsc -p tsconfig.types.json",
    "test:playwright": "npm run build && playwright test",
    "bench": "npm run build && node bench/index.js",
    "sim": "npm run build && node bench/dacument.sim.js",
    "verify": "npm run test && npm run test:types && npm run test:playwright && npm run bench && npm run sim"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jortsupetterson/dacument.git"
  },
  "bugs": {
    "url": "https://github.com/jortsupetterson/dacument/issues"
  },
  "homepage": "https://github.com/jortsupetterson/dacument#readme",
  "engines": {
    "node": ">=18"
  },
  "sideEffects": false,
  "dependencies": {
    "bytecodec": "^2.1.0",
    "uuid": "^13.0.0",
    "zeyra": "^2.2.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "playwright": "^1.57.0",
    "typescript": "^5.9.3"
  }
}
